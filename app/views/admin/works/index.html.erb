<div class="pull-right">
  <%= link_to("new work", new_admin_work_path, class: "btn btn-default") %>
</div>

  <br><br>

  <table class="table table-boldered table-striped custab">
    <thead>
      <tr>
        <td>职位</td>
        <td>简历数量</td>
        <td>收入下限</td>
        <td>收入上限</td>
        <td>选项</td>
        <td>发表时间</td>
      </tr>
    </thead>

    <tbody>
    <% @works.each do |w| %>
    <tr>
      <td>
        <%= render_work_status(w) %>
        <%= link_to(w.title, admin_work_path(w)) %>
      </td>
      <td><%= link_to(w.jianlis.count, admin_work_jianlis_path(w)) %></td>
      <td><%= w.wage_lower_bound %></td>
      <td><%= w.wage_upper_bound %></td>
      <td>
        <%= link_to("编辑", edit_admin_work_path(w), class: "btn btn-xs btn-info") %>
        <%= link_to("删除", admin_work_path(w), class: "btn btn-xs btn-danger", method: :delete, :data => {  :confirm => "sure"}) %>

        <% if w.is_hidden %>
          <%= link_to("公开", publish_admin_work_path(w), method: :post,
          class: "btn btn-xs btn-success") %>
        <% else %>
          <%= link_to("隐藏", hide_admin_work_path(w), method: :post,
          class: "btn btn-xs btn-warning") %>
        <% end %>

      </td>
      <td><%= w.created_at %></td>
    </tr>
    <% end %>
    </tbody>
  </table>
