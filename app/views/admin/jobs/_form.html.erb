<%= simple_form_for @job do |f| %>
 <div class="form-admin-job">
   <%= f.input :title, input_html: {class: "form-control"} %>
   <%= f.input :description, input_html: {class: "from-control"} %>
   <%= f.input :salary_max, input_html: {class: "from-control"} %>
   <%= f.input :salary_min, input_html: {class: "from-control"} %>
   <%= f.input :is_hidden, input_html: {class: "from-control"} %>
 </div>

 <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: 'Submitting...'} %>
<% end %>
