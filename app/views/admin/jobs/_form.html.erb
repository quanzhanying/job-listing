<%= simple_form_for [:admin,@job] do |f| %>
  <div class="form-group">
    <%= f.input :title, input_html: { class: "form-control"} ,:label => "职位名称"%>
    <%= f.input :description, input_html: { class: "form-control"} %>
    <%= f.input :wage_lower_bound, input_html: { class: "form-control"} %>
    <%= f.input :wage_upper_bound, :label => "薪资上限" %>
    <%= f.input :contact_email %>
    <%= f.input :is_hidden, :label => "是否隐藏"%>


  </div>
  <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>
<% end %>
