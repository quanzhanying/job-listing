<%= simple_form_for [:admin,@job] do |f| %>

	<div class="form-job">
		<%= f.input :title, input_html: { class: "form-control"} %>
		<%= f.input :description, input_html: { class: "form-control"} %>
		<%= f.input :wage_upper_bound, input_html: { class: "form-control"} %>
		<%= f.input :wage_lower_bound, input_html: { class: "form-control", min: '0', step: 'any'} %>
		<%= f.input :contact_email, input_html: { class: "form-control"} %>	
		<%= f.input :is_hidden, :label => 'is hidden', :input_html => { :checked => true } %>
	</div>

	<%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submiting..."} %>

<% end %>