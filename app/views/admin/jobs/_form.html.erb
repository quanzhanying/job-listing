<%= simple_form_for [:admin,@job] do |f| %>
<div class='form-group'>
  <%= f.input :title, input_html: {class: 'form-control'} %>
  <%= f.input :description, input_html: {class: 'form-control'} %>
  <%= f.input :wage_min, :label => '薪资下限' %>
  <%= f.input :wage_max, :label => '薪资上限' %>
  <%= f.input :email, as: :email %>
  <%= f.input :is_hidden, :label => '隐藏这条信息', as: :boolean, checked_value: true, unchecked_value: false %>
</div>
<%= f.submit 'Submit', data: {disable_with: 'Submitting...'}, class: 'btn btn-primary' %>
<% end %>
