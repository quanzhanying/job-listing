<%= simple_form_for [:admin, @job] do |f| %>
	<div class="form-group">
		<%= f.input :title ,input_html: {class: "form-control"} %>
		<%= f.input :description, input_html: {class: "form-control"} %>
		<%= f.input :wage_upper_bound, :label => "薪资上限", input_html: {class: "form-control"} %>
		<%= f.input :wage_lower_bound, :label => "薪资下限", input_html: {class: "form-control"} %>
		<%= f.input :contact_email, input_html: {class: "form-control"} %>
	</div>
	<%= f.submit "Submit", class: "btn btn-default", disable_with: "Submitting..."  %>
	<br>
	<div style="margin-top: 10px;">
		<%= f.input :is_hidden, :label => "Hidde", as: :radio_buttons %>
	</div>
<% end %>