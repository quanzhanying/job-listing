<%= simple_form_for [:admin, @job ] do |f| %>
  <div class="form-job">
    <%= f.input :title, :label => "职位" %>
    <%= f.input :description, :label => "工作描述" %>
    <%= f.input :wage_lower_bound, :label => "薪资下限" %>
    <%= f.input :wage_upper_bound, :label => "薪资上限" %>
    <%= f.input :contact_email, :label => "E-mails" %>
    <%= f.input :is_hidden %>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>
<% end %>
