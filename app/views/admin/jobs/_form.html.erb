<%= simple_form_for [:admin, @job ] do |f| %>
  <div class='form-group'>
    <%= f.input :title, input_html: { class: 'form-control'} %>
    <%= f.input :description, input_html: { class: 'form-control'} %>
    <%= f.input :wage_lower_bound, :label => '薪資下限', input_html: { class: 'form-control'} %>
    <%= f.input :wage_upper_bound, :label => '薪資上限', input_html: { class: 'form-control'} %>
    <%= f.input :contact_email, :label => '聯絡資訊', :placeholder => 'email', input_html: { class: 'form-control'} %>
    <%= f.input :is_hidden, :label => '隱藏職缺', input_html: { class: 'form-control'} %>
  </div>
  <%= f.submit 'Submit', class: 'btn btn-primary', data: { disable_with: 'Submiting...'} %>
<% end %>

