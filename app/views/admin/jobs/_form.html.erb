<%= simple_form_for [:admin, @job] do |f| %>
  <div class="form-job">
    <%= f.input :title, input_html: { class: "form-control"}, :label => "👤项目" %>
    <%= f.input :description, input_html: { class: "form-control"}, :label => "🔎详情" %>
    <%= f.input :wage_lower_bound, :label => "💰观众下限" %>
    <%= f.input :wage_upper_bound, :label => "💰观众上限" %>
    <%= f.input :contact_email, :label => "📬联系邮箱" %>
    <%= f.input :is_hidden, :label => "🕶隐藏" %>
  </div>

  <div class="jobs_back">
    <%= link_to("🔙返回", jobs_path, class: "btn btn-success pull-right")%>
  </div>

  <%= f.submit "🔄更新", class: "btn btn-primary pull-right", data: { disable_with: "提交中..." } %>

<% end %>
