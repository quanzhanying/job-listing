<div class="col-md-12">
  <div class="group">
    <% if current_user %>
      <%= link_to("Edit", edit_admin_job_path(@job), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <th>薪资下限</th>
        <th>薪资上限</th>
        <th>联系方式</th>
      </tr>
    </thead>
    <tbody>

        <tr>
          <td>#</td>
          <td><%= @job.title %></td>
          <td><%= simple_format(@job.description) %></td>
          <td><%= @job.wage_lower_bound %></td>
          <td><%= @job.wage_upper_bound %></td>
          <td><%= @job.contact_email %></td>

        </tr>

    </tbody>
  </table>
</div>
