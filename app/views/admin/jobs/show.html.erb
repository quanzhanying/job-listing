<div class="col-md-10">
  <h2><%= @job.title %></h2>
<br/>

<div id="button">
    <%= link_to("Edit", edit_admin_job_path(@job), class: "btn btn-info")%>
</div>
<br/>
 <div id="Job INFO">
  <h4>职位信息</h4>
  <p><%= @job.description %></p>
  <br>
  <h4>预期薪酬</h4>
  <p><%= @job.wage_lower_bound %> ～ <%= @job.wage_upper_bound %></p>
  <br>
  <h4>联系方式</h4>
  <p><%= mail_to @job.contact_email %>
 </div>
<br/>
<br/>

<div id="CV_check">
   <table class="table table-bordered table-striped">
     <thead>
       <tr>
         <th>Name</th>
         <th>Download Link</th>
       </tr>
     </thead>
     <tbody>
       <% @resumes.each do |resume| %>
       <tr>
        <td><%= resume.name %></td>
        <td><%= link_to "Download Resume", resume.attachment_url %></td>
        </tr>
        <% end %>
     </tbody>
   </table>

</div>
</div>
