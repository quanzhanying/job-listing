<div class="col-md-4 col-md-offset-4">
	<h2>Add a job</h2>
	<hr>

	<%= form_for @job do |f| %>
		标题
		<br>
		<%= f.text_field :title %>
		<br>
		描述
		<br>
		<%= f.text_area :description %>
		<br>
		工资上限
		<br>
		<%= f.number_field :wage_upper_bound %>
		<br>
		工资下限
		<br>
		<%= f.number_field :wage_lower_bound %>
		<br>
		联系邮箱
		<br>
		<%= f.text_area :contact_email %>
		<br>
		<%= f.check_box :is_hidden, :checked => true  %> is hidden
		<br>
		<%= f.submit "Submit", :disable_with => 'Submiting' %>

	<% end %>
</div>