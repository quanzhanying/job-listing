<h2 class="text-center">新增职缺</h2>

<div class="col-md-4 col-md-offset-4">
  <%= simple_form_for [:admin,@job] do |f| %>
    <div class="form-job">
      <%= f.input :title, label: '职缺', error: '请输入完整职缺名称。' , input_html: { class: "form-control"} %>
      <%= f.input :description, label: '简介', hint: '请输入职缺简介。', input_html: { class: "form-control"} %>
      <%= f.input :wage_lower_bound, label: '薪资下限', error: '请输入大于0的数字。' , input_html: { class: "form-control"} %>
      <%= f.input :wage_upper_bound, label: '薪资上限', error: '请输入大于0的数字。' , input_html: { class: "form-control"} %>
      <%= f.input :contact_email, label: '联络方式', hint: '请输入E-Mail。', input_html: { class: "form-control"} %>
      <%= f.input :is_hidden, label: '隐藏职缺', input_html: { class: "form"} %>
    </div>
    <div class="form-actions text-center">
      <%= f.submit "Submit", disable_with: "Submiting...", class: "btn btn-primary"%>
    </div>
  <% end %>
</div>
