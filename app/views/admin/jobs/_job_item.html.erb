<tr>
  <td>
    <!-- <% if job.is_hidden %>
      <span style="color:red">( Private )</span>
    <% else %>
      <span style="color:green">( Public )</span>
    <% end %> -->
    <%= render_job_status(job) %>
  </td>
  <td><%= link_to(job.title, admin_job_path(job)) %></td>
  <td><%= link_to(job.resumes.count, admin_job_resumes_path(job)) %></td>
  <td><%= job.wage_lower_bound %></td>
  <td><%= job.wage_upper_bound %></td>
  <td><%= job.created_at %></td>
  <td>
    <% if current_user && current_user == job.user %>
      <%= link_to("Edit", edit_admin_job_path(job), class: "btn btn-sm btn-default") %>
      <%= link_to("Delete", admin_job_path(job), class: "btn btn-sm btn-default", method: :delete, data: {confirm: "Admin, Are you sure?"}) %>
      <% if job.is_hidden %>
        <%= link_to("open", open_admin_job_path(job), class: "btn btn-sm btn-default", method: :post) %>
      <% else %>
        <%= link_to("close", close_admin_job_path(job), class: "btn btn-sm btn-default") %>
      <% end %>

    <% end %>
  </td>
</tr>
