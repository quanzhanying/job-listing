<div class="col-md-12">
  <div class="job">
    <%= link_to("New Job", new_admin_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>Job Title</td>
        <td>Job Description</td>
        <td>Posted Date</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>

        <tr><td>
          <% if job.is_hidden%>
            (Hidden)
            <%else%>
            (Public)
            <%end%>
          <%= link_to(job.title,admin_job_path(job)) %></td>


          <td>
              <%= link_to("Edit", edit_admin_job_path(job))%> |
              <%= link_to("Delete", admin_job_path(job),
                          method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
               <td><%= job.created_at%></td>
        </tr>

      <% end %>
    </tbody>
  </table>
</div>
