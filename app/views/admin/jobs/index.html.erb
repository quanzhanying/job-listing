<div class="pull-right">
  <br>
  <%= link_to("新增工作岗位", new_admin_job_path, :class => "btn btn-default" ) %>
</div>
<div class="jobs-container">
<table class="table table-boldered table-striped custab" >
    <thead>
        <tr>
            <td>
                文章
            </td>

            <!-- <td>
              收到履历数量
            </td> -->
            <!-- <td>
                薪资下限
            </td>
            <td>
                薪资上限
            </td> -->
            <td>
              作者
            </td>
            <td>
                管理选项
            </td>
            <td>
                刊登时间
            </td>
        </tr>
    </thead>

    <% @jobs.each do |job| %>
    <tr>

        <td>
            <%= render_job_status(job) %>

            <%= link_to(job.title, admin_job_path(job)) %>
        </td>
        <!-- <td> <%= link_to(job.resumes.count, admin_job_resumes_path(job)) %> </td> -->
        <!-- <td> <%= job.wage_lower_bound %> </td>
        <td> <%= job.wage_upper_bound %> </td> -->
        <td> <%= job.author %> </td>
        <td>
            <%= link_to edit_admin_job_path(job), class: "btn btn-xs btn-info" do %><i class="fa fa-pencil"></i><% end %>

            <%= link_to admin_job_path(job), :method => :delete, :class => "btn btn-xs  btn-danger", :data => { :confirm => "Are you sure?" } do %><i class="fa fa-trash-o"></i><% end %>
            <% if job.is_hidden %>

            <%= link_to publish_admin_job_path(job) , :method => :post, :class => "btn btn-xs btn-warningbtn btn-xs btn-warning" do %><i class="fa fa-eye-slash"></i><% end %>
        <% else %>
            <%= link_to hide_admin_job_path(job), :method => :post,  :class => "btn btn-xs btn-success" do %><i class="fa fa-eye"></i><% end %>
        <% end %>
        </td>
        <td>
            <%= job.created_at %>
        </td>
    </tr>
    <% end %>
</table>
</div>
