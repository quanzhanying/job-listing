<div class="col-md-12">
  <div class="job">
    <%= link_to("Add a job", new_admin_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Resumes</td>
        <td>Wage Lower Bound</td>
        <td>Wage Upper Bound</td>
        <td>Email</td>
        <td>Created At</td>

      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
      <tr>
        <td><%= render_job_status(job) %></td>
        <td>
              <%= link_to(job.title, admin_job_path(job)) %>
            </td>
            <td><%= link_to(job.resumes.count, admin_job_resumes_path(job)) %></td>
            <td><%= job.wage_lower_bound %></td>
            <td><%= job.wage_upper_bound %></td>
            <td><%= job.contact_email %></td>
            <td><%= job.created_at %> </td>


        <td>  <%= link_to("Edit", edit_admin_job_path(job), class: "btn btn-xs btn-primary")%>
          <%= link_to("Destroy", admin_job_path(job),  class: "btn btn-xs btn-danger",
                      method: :delete, data: { confirm: "Are you sure?"} ) %>
                      <% if job.is_hidden %>
                      <%= link_to("Publish", Publish_admin_job_path(job) , :method => :post, :class => "btn btn-xs btn-success") %>
                      <% else %>
                      <%= link_to("Hide", hide_admin_job_path(job), :method => :post, :class => "btn btn-xs btn-info") %>
                      <% end %>

                    </td>

      </tr>
      <% end %>
    </tbody>
  </table>
</div>
