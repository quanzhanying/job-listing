<div class="col-md-12">

  <div class="job">
    <%= link_to("New job", new_admin_job_path, class: "btn btn-primary pull-right") %>
  </div>

  <table class="table table-boldered">
    <thead>
      <tr>
        <td>職缺</td>
        <td>履歷數量</td>
        <td>薪資下限</td>
        <td>薪資上限</td>
        <td>管理選項</td>
        <td>刊登時間</td>
      </tr>
    </thead>

    <% @jobs.each do |job| %>
    <tr>
      <td>
        <%= render_job_status(job) %>
        <%= link_to(job.title, admin_job_path(job)) %>
      </td>
      <td> <%= link_to(job.resumes.count, admin_job_resumes_path(job)) %> </td>
      <td> <%= job.wage_lower_bound %> </td>
      <td> <%= job.wage_upper_bound %> </td>
      <td>
        <%= link_to("Edit", edit_admin_job_path(job)) %>
        |
        <%= link_to("Destroy", admin_job_path(job), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
        |
        <% args = (job.is_hidden)? "公開" : "隱藏" %>
        <%= link_to(args, toggle_hidden_admin_job_path(job), :method => :put, :class => "btn btn-xs btn-default") %>
      </td>
      <td>
        <%= job.created_at %>
      </td>
    </tr>
    <% end %>
  </table>

  <div class="text-center">
    <%= will_paginate @jobs %>
  </div>

</div>

