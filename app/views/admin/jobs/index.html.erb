<!DOCTYPE html>

<html lang='zh'>
<body class='body'>

  <div id='wrapper'>
  <div id="sidebar-wrapper">
      <ul class="sidebar-nav">
          <li class="sidebar-brand">
            Order
          </li>
              <li><%= link_to("按照薪资下限排序", admin_jobs_path(:order => "by_lower_bound"))%></li>
              <li><%= link_to("按照薪资上限排序", admin_jobs_path(:order => "by_upper_bound"))%></li>
              <li><%= link_to("按照发表时间排序", admin_jobs_path)%></li>

            <li class="sidebar-brand">
                <%= link_to("Add a job", new_admin_job_path ) %>
              </li>

</ul>
  </div>
</div>



  <div class='pull-left col-sm-9'>
  <table cellpadding="0" cellspacing="0" border="0" class=" table-striped table-boldered ">
    <thead>
      <tr>
        <td>职位名称</td>
        <td>收到简历数量</td>
        <td>薪资下限</td>
        <td>薪资上限</td>
        <td>管理选项</td>
        <td>发布时间</td>
      </tr>
    </thead>
  </table>
</div>
<div class="tbl-content col-sm-9 pull-left">
  <table cellpadding="0" cellspacing="0" border="0" class=" table-striped table-boldered ">
    <tbody>
    <% @jobs.each do |job| %>
    <tr>
      <td>
      <%= render_job_status(job) %>

        <%= link_to(job.title, admin_job_path(job)) %>
      </td>
      <td><%= link_to(job.resumes.count, admin_job_resumes_path(job)) %></td>
      <td><%= job.wage_lower_bound %></td>
      <td><%= job.wage_upper_bound %></td>

      <td>
        <%= link_to edit_admin_job_path(job), class: "btn btn-xs btn-default" do %><i class="fa fa-pencil"></i><% end %>

        <%= link_to admin_job_path(job), :method => :delete, :class => "btn btn-xs  btn-danger", :data => { :confirm => "Are you sure?" } do %><i class="fa fa-trash-o"></i><% end %>

        <% if job.is_hidden %>
        <%= link_to publish_admin_job_path(job) , :method => :post, :class => "btn btn-xs btn-success" do %><i class="fa fa-eye"></i><% end %>
        <% else %>
        <%= link_to hide_admin_job_path(job), :method => :post,  :class => "btn btn-xs btn-warning" do %><i class="fa fa-eye-slash"></i><% end %>
        <% end %>
      </td>

      <td>
        <%= job.created_at %>
      </td>
    </tr>
    <% end %>
  </tbody>
  </table>
</div>

  <script>
  $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
  });
  </script>


</body>
</html>
