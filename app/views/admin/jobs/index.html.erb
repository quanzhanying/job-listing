<div class="col-md-12">
	<h2 class="text-center">我发布的工作</h2>

	<div class="job">
    	<%= link_to("New Job", new_admin_job_path, class: "btn btn-primary pull-right") %>
  	</div>

	<table class="table">
		<thead>
			<tr>
				<th>Title</th>
				<th>Description</th>
				<th>Last Update</th>
			</tr>
		</thead>

		<tbody>
			<% @jobs.each do |job|%>
				<tr>
					<td> <%= link_to(job.title, admin_job_path(job)) %>  </td>
					<td> <%= job.description %> </td>
					<td> <%= job.updated_at %> </td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>