<div class="col-md-12">
  <h3 style="text-align:center;
  background:#dddddd;
  border:3px solid #a1a1a1;
  padding:10px 40px;
  border-radius:25px;">📖管理员面板</h3>

  <div class="job">
    <%= link_to("📎添加招聘信息", new_job_path, class: "btn btn-primary pull-right") %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <!--<td>#</td>-->
        <td>👤岗位(标题)</td>
        <td>🔎详情(描述)</td>
        <td>💰薪资下限</td>
        <td>💰薪资上限</td>
        <td>📬联系邮箱</td>
        <td>🕛创建时间</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <!--<td>#</td>-->
          <td>
            <%= job_status(job) %>
            <%= link_to(job.title, job_path(job)) %>
          </td>
          <td><%= render_job_description(job) %></td>
          <td><%= job.wage_lower_bound %></td>
          <td><%= job.wage_upper_bound %></td>
          <td><%= job.contact_email %></td>
          <td><%= job.created_at %></td>
          <td>
            <%= link_to("🗑删除", job_path(job),    class: "btn btn-sm btn-danger pull-right",
                        method: :delete, data: { confirm: "⚠️您确定删除吗?" } )%>
            <%= link_to("📝编辑", edit_job_path(job), class: "btn btn-sm btn-primary pull-right")%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
