<div class="pull-right">
  <%= link_to("军令状", new_admin_job_path, :class => "btn btn-default" ) %>
</div>

<br/>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>
                职缺
            </td>
            <td>
                收到简历数量
            </td>
            <td>
                薪资下限
            </td>
            <td>
                薪资上限
            </td>
            <td>
                管理选项
            </td>
            <td>
                刊登时间
            </td>
        </tr>
    </thead>

    <% @jobs.each do |job| %>
    <tr>
      <td>
        <%= render_job_status(job) %>
        <%= link_to(job.title, admin_jobs_path(job)) %>
      </td>
      <td> <%= link_to(job.resumes.count, admin_job_resumes_path(job)) %> </td>
      <td> <%= job.wage_lower_bound %> </td>
      <td> <%= job.wage_upper_bound %> </td>
      <td>
        <%= link_to("编辑人才资料", edit_admin_job_path(job))%>
        <%= link_to("删除", admin_job_path(job), :method => :delete, :data => { :confirm => "你确定要删除吗？" }) %>
        <% if job.is_hidden %>

          <%= link_to("显示", publish_admin_job_path(job) , :method => :post, :class => "btn btn-xs btn-default") %>
        <% else %>
          <%= link_to("隐藏", hide_admin_job_path(job), :method => :post,  :class => "btn btn-xs btn-default") %>
        <% end %>
      </td>
      <td>
        <%= job.created_at %>
      </td>
    </tr>
    <% end %>
</table>
