<div class="col-md-12">
  <div class="group">
    <%= link_to("新增职位", new_admin_job_path, class: "btn btn-default pull-right") %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <td>职缺</td>
        <td>收到简历数量</td>
        <td>薪资下限</td>
        <td>薪资上限</td>
        <td>创建时间</td>
        <td>刊登时间</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td>
            <%= render_job_status(job) %>
            <%= link_to(job.title, admin_job_path(job)) %>
          </td>
          <td><%= link_to(job.resumes.count, admin_job_resumes_path(job)) %></td>
          <td><%= job.wage_lower_bound %></td>
          <td><%= job.wage_upper_bound %></td>
          <td><%= job.created_at %></td>
          <td>
            <%= link_to("编辑", edit_admin_job_path(job), class: "btn btn-sm btn-default" )%>
            <%= link_to("删除", admin_job_path(job), class: "btn btn-sm btn-default", method: :delete, data:{ confirm: "你确定删除吗？"}) %>
            <% if job.is_hidden %>
              <%= link_to("公开", publish_admin_job_path(job), method: :post, class: "btn btn-xs btn-default") %>
            <% else %>
              <%= link_to("隐藏", hide_admin_job_path(job), method: :post, class: "btn btn-xs btn-default") %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>

  </table>
</div>
