<div class="col-md-12">
  <h2 class= "text-center"> 职位信息管理 </h2>
  <div class="job">
      <%= link_to("Add a job",new_admin_job_path,class: "btn btn-primary pull-right")%>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
      <!--  <td> # </td>  -->
        <td> Title </td>
        <td> Description </td>
        <td> Wage_lower</td>
        <td> Wage_uppwer</td>
      <!--  <td> is_hidden </td>  -->
      <!--  <td> is_hidden_1 </td> -->
        <td> Contact_email </td>
        <td> Time_Create</td>
        <td> Action </td>

      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
        <!--  <td> # </td>  -->
          <td>
            <%= render_job_status(job) %>
            <%= link_to(job.title,admin_job_path(job))%>
          </td>
          <td><%= job.description%> </td>
          <td><%= job.wage_lower_bound %></td>
          <td><%= job.wage_upper_bound%></td>
          <td><%= job.contact_email%></td>
          <td><%= job.created_at%> </td>
          <td>
              <%= link_to("Edit",edit_admin_job_path(job))%> |
              <%= link_to("Destroy",admin_job_path(job),method: :delete,data:{confirm:"Are you sure!"} )%> |
              <% if job.is_hidden_1  %>
                <%= content_tag(:span,"",:class => "fa fa-globe")%>
                <%= link_to("Public",public_admin_job_path(job),:method => :post,data:{confirm:"Are you sure to dispaly this job!"} , :class => "btn btn-xs btn-default")%>
              <% else %>
                <%= content_tag(:span,"",:class => "fa fa-lock") %>
                <%= link_to("Hidden",hide_admin_job_path(job),:method => :post,data:{confirm:"Are you sure to hide this job"}, :class => "btn btn-xs btn-default" )%>
              <% end %>
          </td>
        </tr>
      <% end %>

    </tbody>
  </table>
</div>
