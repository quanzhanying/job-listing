<div class="pull-right">
  <%=link_to("Add a job", new_admin_job_path, :class => "btn btn-primary") %>

</div>
<br><br>
<table class="table  table-boldered">
<td> 职位</td>
<td> 工作内容</td>
<td> 薪资上限</td>
<td> 薪资下限</td>

<td> 发布时间</td>
<td> </td>

  <tbody>
  <% @jobs.each do |job| %>
  <tr>
    <td>
     <%= render_job_status(job) %>

      <%= link_to(job.title, admin_job_path(job)) %>
      <%=render_job_status2(job)%>
    </td>

    <td>
      <p>

      <%= simple_format(job.description) %>
    </p>
    </td>
        <td>

          <%=job.wage_upper_bound%>
        </td>
        <td>

        <%=job.wage_lower_bound%>
      </td>

    <td>
      <%= job.created_at %>
    </td>
    <td>
      <%= link_to("Edit", edit_admin_job_path(job), :class => "btn btn-sm") %> |

      <%= link_to("Destroy", admin_job_path(job), :class => "btn btn-sm", :method => :delete, :data => {:confirm => "Are you sure?"})%>
      <% if job.is_hidden %>
      <%= link_to("Publish", publish_admin_job_path(job) , :method => :post, :class => "btn btn-xs btn-default") %>
    <% else %>
    <%= link_to("Hide", hide_admin_job_path(job), :method => :post,  :class => "btn btn-xs btn-default") %>
    <% end %>
    </td>
  </tr>
  <% end %>
</tbody>
</table>
