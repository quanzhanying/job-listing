<div class="pull-right">
  <%= link_to("Add a job", new_admin_job_path, :class => "btn btn-default" ) %>
</div>

<br><br>
<table class="table table-boldered">
  <thead>
    <tr>
      <td>职位</td>
      <td>收到简历数量</td>
      <td>工资下限</td>
      <td>工资上限</td>
      <td>管理选项</td>
      <td>刊登时间</td>
    </tr>
  </thead>
  <% @jobs.each do |job| %>
  <tr>
    <td><%= link_to(job.title, admin_job_path(job)) %></td>
    <td><%= job.resumes.count %></td>
    <td><%= job.wage_lower_bound %></td>
    <td><%= job.wage_upper_bound %></td>
    <td>
      <%= link_to("Edit", edit_admin_job_path(job)) %>
      |<%= link_to("Destroy", admin_job_path(job), :method => :delete, :data => { :confirm => "Are you sure>" }) %>
      |<% if job.is_hidden %>
        <%= link_to("(Hidden)", publish_admin_job_path(job), method: :post, class: "btn btn-xs btn-default") %>
      <% else %>
        <%= link_to("(Public)", hide_admin_job_path(job), method: :post, class: "btn btn-xs btn-default") %>
      <% end %>
    </td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
</table>
