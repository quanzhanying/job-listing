<div class="col-md-12">

  <h2 class="text-center">我发布的工作</h2>
  <div class="job">
    <%= link_to("Add a job", new_admin_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table">

    <tbody>
      <% @jobs.each do |job| %>
        <tr>

          <td>
            <%= render_job_status(job) %>

            <%= link_to(job.title, admin_job_path(job)) %>
          </td>
          <td><%= job.wage_upper_bound %></td>
          <td><%= job.wage_lower_bound %></td>
          <td><%= job.contact_email %></td>
          <td>
           <%= link_to("Edit", edit_admin_job_path(job), class: "btn btn-sm btn-default") %>
            <%= link_to("Delete", admin_job_path(job), class: "btn btn-sm btn-default", method: :delete, data:{confirm:"Are you sure?"})%>
            <% if job.is_hidden %>
              <%= link_to("publish", publish_admin_job_path(job), :method => :post, class: "btn btn-sm btn-default") %>
            <% else %>
              <%= link_to("Hide", hide_admin_job_path(job), :method => :post, class: "btn btn-sm    btn-default") %>
            <% end %>
           </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
