<div class="col-md-12">
  <div class="group">
    <%= link_to("New A JOB", new_admin_job_path, class: "btn btn-primary pull-right") %>
  </div>



  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <th>Last Update</th>
      </tr>

      <tbody>
        <% @jobs.each do |job| %>
          <tr>
            <td>#</td>
            <td>
              <%= render_job_status(job) %>
              <%= link_to(job.title,admin_job_path(job)) %>
            </td>
            <td>
              <%= job.description %>
            </td>
            <td>
              <%= job.updated_at %>
            </td>
            <td>
                <%= link_to("Edit", edit_admin_job_path(job), class: "btn btn-sm btn-default")%>
                <%= link_to("Delete", admin_job_path(job),    class: "btn btn-sm btn-default",
                            method: :delete, data: { confirm: "Are you sure?" } )%>

                <% if job.is_hidden %>
                  <%= link_to("Publish", publish_admin_job_path(job),    class: "btn btn-sm btn-default",
                               method: :post,data: { confirm: "Publish,Are you sure?" } )%>
               <% else %>
                  <%= link_to("Hide", hide_admin_job_path(job),    class: "btn btn-sm btn-default",
                               method: :post,data: { confirm: "Hide,Are you sure?" } )%>
               <% end %>

            </td>
          </tr>
        <% end %>
      </tbody>
    </thead>
  </table>
</div>
