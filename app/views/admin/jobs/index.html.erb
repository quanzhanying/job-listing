<div class="col-md-12">
  <div class="job">
    <%= link_to("Add a Job", new_admin_job_path, class: "btn btn-default pull-right") %>
  </div>

  <h2 class="text-center"> Jobs created by Admin </h2>

  <table class="table table-boldered table-striped custab">
    <thead>
      <tr>
        <th> Title </th>
        <th> resumes </th>
        <th> wage_lower_bound </th>
        <th> wage_upper_bound </th>
        <th> Created at </th>
        <th> options </th>
      </tr>
    </thead>

    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td>
            <%= render_job_status(job) %>
            <%= link_to(job.title, admin_job_path(job))%>
          </td>
          <td> <%= link_to(job.resumes.count, admin_job_resumes_path(job)) %> </td>
          <td> <%= job.wage_lower_bound %> </td>
          <td> <%= job.wage_upper_bound %> </td>
          <td> <%= job.created_at %> </td>
          <td>
              <%= link_to("Edit", edit_admin_job_path(job), :class => "btn btn-xs btn-info")%> |
              <%= link_to("Delete", admin_job_path(job),:class => "btn btn-xs btn-danger",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
              <% if job.is_hidden %>
                <%= link_to("Publish", publish_admin_job_path(job), :method => :post, :class => "btn btn-xs btn-success")%>
              <% else %>
                <%= link_to("Hide", hide_admin_job_path(job), :method => :hide, :class => "btn btn-xs btn-warning")%>
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
