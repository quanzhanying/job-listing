<div class="col-md-12">
  <h2 class="text-center">Admin Panel</h2>

  <div class="job">
    <%= link_to("New job", new_job_path, class: "btn btn-primary pull-right") %>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Last Update</th>
      </tr>
    </thead>

    <tbody>
          <% @jobs.each do |job| %>
          <tr>
            <td><%= link_to(job.title, job_path(job)) %></td>
            <td><%= job.description %></td>
            <td><%= job.updated_at %></td>
            <td>
              <%= link_to("Edit", edit_job_path(job), class: "btn btn-sm btn-default") %>
              <%= link_to("Delete", job_path(job), class: "btn btn-sm btn-default", method: :delete, data: { confirm: "Are you sure?"}) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
