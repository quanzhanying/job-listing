

  <div id="wrapper">
  <div id="sidebar-wrapper">
      <ul class="sidebar-nav">
          <li class="sidebar-brand">

          </li>
          <li>
              <%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound"))%>
          </li>
          <li>
              <%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound"))%>
          </li>
          <li>
              <%= link_to("按照发表时间排序", jobs_path)%>
          </li>

      </ul>
  </div>
</div>

<br /><br /><br /><br />

  <div class="pull-left">
    <%= link_to("添加职缺", new_admin_job_path, :class => "btn btn-default" ) %>

    <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">排序方式</a>
  </div>



  <br><br>
  <div class='pull-left container-fluid'>
  <table class="table table-striped table-boldered custab">
    <thead>
      <tr>
        <td>职缺</td>
        <td>收到简历数量</td>
        <td>薪资下限</td>
        <td>薪资上限</td>
        <td>管理选项</td>
        <td>刊登时间</td>
      </tr>
    </thead>
    <tbody data-spy="scroll" data-target="#job">
    <% @jobs.each do |job| %>
    <tr>
      <td>
      <%= render_job_status(job) %>

        <%= link_to(job.title, admin_job_path(job)) %>
      </td>
      <td><%= link_to(job.resumes.count, admin_job_resumes_path(job)) %></td>
      <td><%= job.wage_lower_bound %></td>
      <td><%= job.wage_upper_bound %></td>

      <td>
        <%= link_to edit_admin_job_path(job), class: "btn btn-xs btn-default" do %><i class="fa fa-pencil"></i><% end %>

        <%= link_to admin_job_path(job), :method => :delete, :class => "btn btn-xs  btn-danger", :data => { :confirm => "Are you sure?" } do %><i class="fa fa-trash-o"></i><% end %>

        <% if job.is_hidden %>
        <%= link_to publish_admin_job_path(job) , :method => :post, :class => "btn btn-xs btn-success" do %><i class="fa fa-eye"></i><% end %>
        <% else %>
        <%= link_to hide_admin_job_path(job), :method => :post,  :class => "btn btn-xs btn-warning" do %><i class="fa fa-eye-slash"></i><% end %>
        <% end %>
      </td>

      <td>
        <%= job.created_at %>
      </td>
    </tr>
    <% end %>
  </tbody>
  </table>
</div>

  <script>
  $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
  });
  </script>


</body>
</html>
