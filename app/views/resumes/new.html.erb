<div class="resume_bg row">
    <div class="show_title container text-center">
        <h1><%= @job.title %></h2>
    </div>
</div>

<div class="container present_resume">
    <div class=" col-md-8 col-md-offset-2">
        <%= simple_form_for [@job, @resume] do |f| %>
        <%= f.input :name, :label => "姓名" %>
        <%= f.input :gender, as: :radio_buttons, collection: [['男','男'], ['女', '女']], required: "男", :label => "性别" %>
        <%= f.input :phonenumber, :label => "电话号码" %>
        <%= f.input :content, :label => "个人简介" %>
        <%= f.input :attachment, :label => "上传简历 .PDF格式" %>

        <%= f.submit "提交", class: "btn btn-default", data: {disable_with: "Submiting..."} %>
        <% end %>
    </div>
</div>
