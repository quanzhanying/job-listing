<div class="col-md-12">
  <h3><%= @job.title %>/简历列表</h3>

  <% @resumes.each do |resume| %>

  <div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading"><%= resume.user.email %></div>
    <div class="panel-body">
      <p>
        <%= link_to(simple_format(resume.content),job_resume_path(@job,resume)) %>
      </p>
    </div>

    <!-- List group -->
    <ul class="list-group">
      <li class="list-group-item"><%=resume.updated_at%></li>

      <li class="list-group-item">

         <% if resume.attachment_url %>
          <i class="fa fa-paperclip" aria-hidden="true"></i>
          <%= link_to "下载简历", resume.attachment_url %>
         <% else %>
           无附件
         <% end %>
         |
         <%= link_to("Edit", edit_job_resume_path(@job,resume))%>
      </li>
    </ul>
  </div>

  <% end %>

