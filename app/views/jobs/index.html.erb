<div class="container-fluid">
<% if current_user && current_user.isAdmin %>
<div class="group">
  <%= link_to("New job", new_job_path, class:"btn btn-primary pull-right")%>
</div>
<% end %>
<table class="table">
<thead>
  <th>#</th>

  <th>job</th>
  <th>description</th>
  <th>salary</th>
  <th>contact</th>
  <th>created at</th>
  <th colspan="3"></th>
</thead>
<tbody>
  <% @jobs.each do |job| %>
  <% if !job.hide || !params[:admin_id].blank?  %>
  <tr>

  <td>
    <% if !job.hide %>
    <i class="fa fa-globe" aria-hidden="true"></i>
    <% else %>
    <i class="fa fa-lock" aria-hidden="true"></i>
    <% end %>
  </td>
  <td><%=  link_to(job.title, job_path(job))%></td>
  <td><%= job.description %></td>
  <td> <%=job.salaryMin%> - <%=job.salaryMax%></td>
  <td><%= job.contact %></td>
  <td><%= job.created_at %></td>

  <% if !params[:admin_id].blank?%>

  <td>

    <% if !current_user.blank? && current_user.isAdmin && (!job.hide || !params[:admin_id].blank?) %>
    <%= link_to("Edit", edit_job_path(job), class: "btn btn-default") %>
    <%= link_to("Delete",job_path(job), method: :delete, class: "btn btn-default", data: {confirm: "Are you sure?"}) %>
    <%  if job.hide %>
    <%= link_to("Publish",job_publish_path(job), method: :post, class: "btn btn-primary") %>
    <% else %>
    <%= link_to("Hide", job_hide_path(job), method: :post, class: "btn btn-primary") %>
    <% end %>
    <% end %>

  </td>
  <% end %>
  </tr>

  <% end %>
  <% end %>
</tbody>
</table>
</div>
