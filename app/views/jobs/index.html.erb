<div class="col-md-12">
  <div class = "job">
    <%= link_to("Add a job", new_job_path, class: "btn btn-default pull-right") %>
  </div>

  <table class="table table-hover">
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td>(Public)<%= link_to(job.title, job_path(job)) %></td>
          <td><%= link_to("Edit", edit_job_path(job))%> | <%= link_to "Destroy", job, method: :delete, data:{confirm: "Are you sure?"} %></td>
          <td><%= job.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
