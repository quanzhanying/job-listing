<div class="pull-right">
    <%# link_to("Add a job",new_job_path, :class => "btn btn-default" ) %>
</div>

<%= form_tag jobs_path, :method => "get" do %>

<div class="searchform">
    <%= text_field_tag :search, params[:search], placeholder: "搜索你想要的", class: "searchbox"%>
    <span>
        <%= submit_tag "搜索", :title => nil, :description => nil, class: "mike" %>
        <!-- <input type="submit" value="点 击" class="mike"> -->
    </span>
</div>
<% end %>

<hr/>

<table class="table table-boldered table-hover">

    <div class="dropdown clearfix pull-right">
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            排序
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
            <li>
                <%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound")) %>
            </li>
            <li>
                <%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound")) %>
            </li>
            <li>
                <%= link_to("按照发表时间排序", jobs_path ) %>
            </li>
        </ul>
    </div>
    <thead>
        <tr>
            <td>职缺</td>
            <td>薪资下限</td>
            <td>薪资上限</td>
            <td>刊登时间</td>
        </tr>

    </thead>
    <tbody>

        <% @jobs.each do |job| %>
        <tr>
            <td>
                <%= link_to(job.title, job_path(job), :target => "_blank") %>
            </td>
            <td width="30%">
                <span class="badge badge-info">
                    <span class="fa fa-rmb"></span><%= job.wage_lower_bound%>
                    -
                    <%= job.wage_upper_bound%>元
                </span>
            </td>

            <td>
                <%= local_time(job.created_at, '%B %e, %Y %l:%M%p') %>
            </td>
        </tr>
        <% end %>
    </tbody>


</table>
<div class="text-center">
    <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
</div>
