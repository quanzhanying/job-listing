<div class="col-md-12">
  <div class="job">
    <%= link_to("Add a job", new_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>Title</td>

        <td>created_at</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>

          <td> (Public) <%= link_to(job.title, job_path(job)) %></td>

          <td><%= job.created_at %></td>
          <td>
              <% if current_user && current_user == job.user %>
              <%= link_to("Edit", edit_job_path(job))%>
              <%= link_to("Delete", job_path(job),
                          method: :delete, data: { confirm: "Are you sure?" } )%>
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
