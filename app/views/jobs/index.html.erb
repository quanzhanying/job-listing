<div class="col-md-12">
  <div class="job">
    <%= link_to("Add a job", new_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>Title</td>
        <td>Description</td>
        <td>Wage lower bound</td>
        <td>Wage upper bound</td>
        <td>Contact email</td>
        <td>Creator</td>
        <td>Created at</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
         <tr>
           <td><%= link_to(job.title,job_path(job)) %></td>
           <td><%= job.description %></td>
           <td><%= job.wage_lower_bound %></td>
           <td><%= job.wage_upper_bound %></td>
           <td><%= job.contact_email %></td>
           <td><%= job.user.email %></td>
           <td><%= job.created_at %></td>
           <td>
             <% if current_user && current_user == job.user %>
                <%= link_to("Edit", edit_job_path(job), class: "btn btn-sm btn-default") %>
                <%= link_to("Delete", job_path(job),    class: "btn btn-sm btn-default",
                             method: :delete, data: {confirm: "Are you sure?"} ) %>
             <% end %>
           </td>
         </tr>
      <% end %>
    </tbody>
  </table>
</div>
