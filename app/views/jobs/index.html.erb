<div class="col-md-12">
  <div class="group">
    <%= link_to("New job", new_job_path, class: "btn-primary pull-right") %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <th>薪资下限</th>
        <th>薪资上限</th>
        <th>联系方式</th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td>#</td>
          <td><%= job.title %></td>
          <td><%= simple_format(job.description) %></td>
          <td><%= job.wage_lower_bound %></td>
          <td><%= job.wage_upper_bound %></td>
          <td><%= job.contact_email %></td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
