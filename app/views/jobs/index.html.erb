<div class="col-md-12">

  <table class="table table-hover">
    <div class="job">
      <%= link_to("New job", new_job_path, class: "btn btn-primary pull-right") %>
    </div>
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Edit/Delete</td>
        <td>Description</td>
        <td>salary_max</td>
        <td>salary_min</td>
        <td>email</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td>#</td>
          <td><%= job.title %></td>
          <td>
              <%= link_to("Edit", edit_job_path(job))%>
              <%= link_to("Delete", job_path(job),
                          method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
          <td><%= job.description %></td>
          <td><%= job.salary_max %></td>
          <td><%= job.salary_min %></td>
          <td><%= job.email %></td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
