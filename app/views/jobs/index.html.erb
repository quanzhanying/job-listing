<div class="col-md-12">

    <div class="job">
    <%= link_to("New job", new_job_path, class:"btn btn-primary pull-right") %>
    </div>
  <table class="table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Job title</td>
        <td>Description</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
      <tr>
        <td>#</td>
        <td><%= link_to(job.title, job_path(job)) %></td>
        <td><%= job.description %></td>
        <td>
          <%= link_to("Edit job", edit_job_path(job), class:"btn btn-sm btn-default") %>
          <%= link_to("Delete job", job_path(job), class:"btn btn-sm btn-default", method: :delete, data:{confirm:"Are you sure?"}) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
