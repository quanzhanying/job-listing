<div class="col-md-12">
  <div class="group">
    <%= link_to("New job", new_job_path, class: "btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td>#</td>
          <td><%= link_to(job.title, job_path(job)) %></td>
          <td><%= simple_format(job.description) %></td>
          <td>
            <%= link_to("Edit", edit_job_path(job), class: "btn btn-sm btn-default") %>
            <%= link_to("Delete", job_path(job), class: "btn btn-sm btn-default", method: :delete, data: {confirm: "Are you sure?"})%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div> 
