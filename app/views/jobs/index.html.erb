<div class="col-md-12">
  <div class="job" >
    <%= link_to("新增", new_job_path, class: "btn btn-primary pull-right") %>
  </div>

  <table class="table table-hover" style="margin:40px 0px 40px 0px;">
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= link_to(job.title, job_path(job)) %></td>
          <td>
              <%= link_to("编辑", edit_job_path(job))%> |
              <%= link_to("删除", job_path(job),
                          method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
          <td><%= job.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
