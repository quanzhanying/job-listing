<div class="col-md-12">
  <div class="job">
    <%= link_to("添加招聘信息", new_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <!--<td>#</td>-->
        <td>标题</td>
        <td>描述</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <!--<td>#</td>-->
          <td><%= link_to(job.title, job_path(job)) %></td>
          <td><%= job.description %></td>
          <td>
              <%= link_to("编辑", edit_job_path(job), class: "btn btn-sm btn-primary")%>
              <%= link_to("删除", job_path(job),    class: "btn btn-sm btn-danger",
                          method: :delete, data: { confirm: "您确定删除吗?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
