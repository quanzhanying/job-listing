<div class="pull-right">
  <%= link_to("Add a job", new_job_path, :class => "btn btn-primary") %>
</div>

<table class="table table-boldered">
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= link_to(job.title, job_path(job)) %>
    </td>
    <td>
      <%= link_to("Edit", edit_job_path(job), :class => "btn btn-default")%> |
      <%= link_to("Destroy",job_path(job), :class => "btn btn-default",:method => :delete, :data => {:confirm => "Are you sure?"}) %>
    </td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
</table>
