<div class="col-md-12">
  <div class="group">
    <%= link_to("Add a job", new_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <!-- td>#</td >
        <td>Title</td>
        <td>Description</td-->
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <!--td>#</td -->
          <td><%= link_to(job.title, job_path(job)) %></td>
          <!-- td><%= job.description %></td -->
          <td>
              <%= link_to("Edit", edit_job_path(job))%> |
              <%= link_to("Destroy", job_path(job),
                          method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
          <td><%= job.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
