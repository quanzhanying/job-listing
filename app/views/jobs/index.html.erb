<table class="table table-boldered">
  <% @jobs.each do |job|%>
    <tr>
      <td>
        <%= link_to job.title, job%>
      </td>
      <td>
        <%= link_to("Edit", edit_job_path(job))%>
        <%= link_to("Delete", job_path(job), method: :delete, data: { confirm: "Are you sure to delete?"})%>
      </td>
      <td>
        <%= job.created_at%>
      </td>
    </tr>
  <% end %>
</table>
<div class="pull-right">
  <%= link_to("Add a new job", new_job_path, class: "btn btn-default")%>
</div>
