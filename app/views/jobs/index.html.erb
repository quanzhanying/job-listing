<div class="col-md-12">

  <div class="dropdown clearfix pull-right">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      排序
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
        <li>
          <%= link_to("按观众上限排序", jobs_path(:order => "by_upper_bound")) %>
        </li>
        <li>
          <%= link_to("按观众下限排序", jobs_path(:order => "by_lower_bound")) %>
        </li>
        <li>
          <%= link_to("按发表时间排序", jobs_path ) %>
        </li>
    </ul>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <td>👤项目(标题)</td>
        <td>💰观众下限</td>
        <td>💰观众上限</td>
        <td>🕛创建时间</td>
      </tr>
    </thead>
    <tbody>
        <%= render :partial => "job_item", :collection => @jobs, :as => :job %>
    </tbody>
  </table>
</div>
