<div class="col-md-12">
  <!-- <div class="group">
    <%= link_to("New Job", new_job_path, class: "btn btn-primary pull-right") %>
  </div> -->
  <table class="table table-hover">
    <thead>
      <tr>
        <td><span class="glyphicon glyphicon-asterisk"></span></td>
        <td>工作名称</td>
        <!-- <td>Description</td> -->
        <td>薪资下限</td>
        <td>薪资上限</td>
        <td>刊登时间</td>
      </tr>
    </thead>
    <tbody>
      <div class="pull-right">
        <div class="dropdown">
          <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          排序
          <span class="caret"></span>
          </button>
          <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
            <li><%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound")) %></li>
            <li><%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound")) %></li>
            <li><%= link_to("按照发布时间排序", jobs_path) %></li>
          </ul>
          </div>
        </div>
      <div>
      <% @jobs.each do |job| %>
      <tr>
        <td><span class="glyphicon glyphicon-asterisk"></span></td>
        <td><%= link_to(job.title, job_path(job)) %></td>
        <td><%= job.wage_lower_bound %></td>
        <td><%= job.wage_upper_bound %></td>
        <td><%= job.created_at %> </td>
      </tr>
      <% end %>
    </div>
    </tbody>
  </table>
</div>
