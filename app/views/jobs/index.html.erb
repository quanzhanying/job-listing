<h1><a href="#" class="btn btn-block btn-success">同城招聘网 <span class="glyphicon glyphicon-glass"></span></a></h1>
<div class="pull-right">
  <%= link_to("Add a job", new_job_path, :class => "glyphicon glyphicon-hand-right") %>
</div>
<div class="dropdown clearfix pull-right">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      排序
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
        <li>
          <%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound")) %>
        </li>
        <li>
            <%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound")) %>

        </li>
        <li>
          <%= link_to("按照发表时间排序", jobs_path ) %>

        </li>
    </ul>
</div>

<table class="table table-boldered">

  <thead>
   <tr>
     <td><a href="#" class="btn btn-info">工作列表 <span class="glyphicon glyphicon-align-center"></span></a></td>
     <td><a href="#" class="btn btn-warning">工资下限 <span class="glyphicon glyphicon-arrow-down"></span></a></td>
     <td><a href="#" class="btn btn-success">工资上限 <span class="glyphicon glyphicon-arrow-up"></span></a></td>
     <td><a href="#" class="btn btn-primary">联系方式 <span class="glyphicon glyphicon-user"></span></a></td>
     <td><a href="#" class="btn btn-primary btn-success"><span class="glyphicon glyphicon-asterisk"></span> 编辑工作</a></td>
     <td><a href="#" class="btn btn-primary btn-default"><span class="glyphicon glyphicon-time"></span> 发布时间</a></td>
   </tr>
 </thead>
  <% @jobs.each do |job| %>
  <tr>
    <td>
    <%= link_to(job.title, job_path(job)) %>
  </td>
  <td><%= job.wage_lower_bound %></td>
  <td><%= job.wage_upper_bound %></td>
  <td><%= job.contact_email %></td>
  <td>
     <% if current_user && current_user == job.user %>
    <%= link_to("Edit", edit_job_path(job)) %> |
    <%= link_to("Destroy", job_path(job), :method => :delete, :data => { :confirm => "Are yousure?"})%>
    <% end %>
  </td>
  <td>
  <%= job.created_at %>
</td>
</tr>
<% end %>
</table>
