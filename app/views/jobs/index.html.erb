<div class="pull-right">
  <%= link_to("Add a job", new_job_path, :class => "btn btn-default" ) %>
</div>
<br />
<br />
<div class="panel panel-default panel-table">
<table class="table table-striped table-bordered table-list">
  <thead>
    <tr >
      <th><i class="fa fa-cog" aria-hidden="true"></i></th>
      <th class="hidden-xs">Job</th>
      <th>Created at</th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
    <tr>
      <td align="center">
        <%= link_to edit_job_path(job), :class => "btn btn-primary" do %>
         <i class="fa fa-pencil" aria-hidden="true"></i>
        <% end %>
        <%= link_to job_path(job), method: :delete,
        data:{confirm: "Delete this job?"}, :class => "btn btn-danger" do %>
          <i class="fa fa-trash" aria-hidden="true"></i>
        <% end %>
      </td>
      <td class="hidden-xs">
        <%= link_to(job.title, job_path(job)) %>
      </td>
      <td> <%= job.created_at %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
