<div class="col-md-12">
  <h2 class="text-center"> Opening Positions </h2>
  <br>
  <div class="dropdown", align="right">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        排序
            <b class="caret"></b>
    </button>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuDivider">
      <li><%= link_to("按照薪酬下限排序", jobs_path(:order => "by_lower_bound")) %> </li>
      <li><%= link_to("按照薪酬上限排序", jobs_path(:order => "by_upper_bound")) %> </li>
      <li><%= link_to("按照创建时间排序", jobs_path) %> </li>
    </div>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>招聘职位</td>
        <td>薪酬下限</td>
        <td>薪酬上限</td>
				<td>创建时间</td>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => "job_item", :collection => @jobs, :as => :job %>
    </tbody>
  </table>
</div>
