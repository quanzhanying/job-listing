<div class="pull-right">
  <%= link_to("Add a job", new_job_path, :class => "btn btn-default") %>
</div>

<table class="table table-boldered">
  <thead>
   <tr>
     <td>工作列表</td>
     <td>薪资下限</td>
     <td>薪资上限</td>
     <td>联系方式</td>
   </tr>
 </thead>
  <% @jobs.each do |job| %>
  <tr>
    <td>
    <%= link_to(job.title, job_path(job)) %>
  </td>
  <td><%= job.wage_lower_bound %></td>
  <td><%= job.wage_upper_bound %></td>
  <td><%= job.contact_email %></td>
  <td>
    <%= link_to("Edit", edit_job_path(job)) %> |
    <%= link_to("Destroy", job_path(job), :method => :delete, :data => { :confirm => "Are yousure?"})%>
  </td>
  <td>
  <%= job.created_at %>
</td>
</tr>
<% end %>
</table>
