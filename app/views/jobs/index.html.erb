<div class="col-md-12">

<!--12是用来调衡div class中的元素的位置-->
  <!-- <#%= link_to("Add a job", new_job_path, :class => "btn btn-primary pull-right")%> -->
</div>
<table class="table table-boldered">
<td>#</td>
<td>标题</td>
<td>描述信息</td>
<td>薪资上限</td>

<td>薪资下限</td>
<td>邮箱</td>
<td>发布时间</td>
<td></td>

<tbody>
  <% @jobs.each do |job| %>
  <tr>
    <td>#</td>
    <th>
      <%= link_to(job.title, job_path(job)) %>
    </th>
    <p>
    <td>
      <%= simple_format(job.description)%>
    </td>
  </p>
    <td>
      <%= job.wage_upper_bound %>
    </td>
    <td>
      <%= job.wage_lower_bound %>
    </td>
    <td>
      <%= job.contact_email %>
    </td>
    <td>
      <%= job.created_at %>
    </td>
    <td>
      <% if current_user&&current_user.is_admin %>
       <%= link_to("Edit", edit_job_path(job),class: "btn btn-sm ") %> |
    <%= link_to("Destroy", job_path(job), class: "btn btn-sm ",
          :method => :delete, :data => { :confirm => "Are you sure?" }) %>
<% end %>
    </td>


  </tr>
</tbody>
  <% end %>
</table>
<div class="text-center">
  <%= will_paginate @k %>
</div>
