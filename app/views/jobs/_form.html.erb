<%= simple_form_for @job do |f| %>
  <div class="form-job">
    <%= f.input :title, :label => "招聘职位"  %>
    <%= f.input :description, :label => "职位信息" %>
    <%= f.input :wage_lower_bound, :label => "薪酬下限"%>
    <%= f.input :wage_upper_bound, :label => "薪酬上限" %>
    <%= f.input :contact_email, :label => "联系方式" %>
    <%= f.input :is_hidden, :label => "Hidden" %>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>
<% end %>
