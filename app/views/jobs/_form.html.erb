<%= simple_form_for @job do |job| %>
  <div class="form-group">
    <%= job.input :title,input_html:{class: "form-control"} %>
    <%= job.input :description, input_html:{class: "form-control"} %>
    <%= job.input :wage_lower_bound,label: "薪资下限",input_html:{class: "form-control"} %>
    <%= job.input :wage_upper_bound,label: "薪资上限",input_html:{class: "form-control"} %>
    <%= job.input :contact_email,input_html:{class: "form-control"} %>
    <%= job.input :is_hidden%>
  </div>

  <%= job.submit "Submit",class: "btn btn-primary",data: {disable_with: "Submiting..."} %>
<% end %>
