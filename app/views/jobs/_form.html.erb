<%= simple_form_for @job do |f| %>
<div class="form-job">
  <%= f.input :title, :label => "工作名称" %>
  <%= f.input :description, :label => "工作描述" %>
  <%= f.input :wage_upper_bound, :label => "薪资上限" %>
  <%= f.input :wage_under_bound, :label => "薪资下限" %>
  <%= f.input :contact_email, :label => "联系邮箱" %>
  <%= f.input :is_hidden, :label => "是否显示" %>
</div>
<%= f.submit "提交", class: "btn btn-primary", data: { disable_with:"Submitting..."} %>
<% end %>
