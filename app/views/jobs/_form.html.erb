<%= simple_form_for @job do |f| %>
  <div class="form-job">
    <%= f.input :title, input_html: { class: "form-control"} %>
    <%= f.input :description, input_html: { class: "form-control"} %>
  </div>

  <div class="jobs_back">
    <%= link_to("返回", jobs_path, class: "btn btn-success pull-right")%>
  </div>

  <%= f.submit "更新", class: "btn btn-primary pull-right", data: { disable_with: "提交中..." } %>

<% end %>
