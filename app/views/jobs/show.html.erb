<div class="col-md-12">
  <div class="job">

    <% if current_admin && current_admin == @job.admin %>
      <%= link_to("Delete Job", job_path(@job),    class: "btn btn-primary pull-right", 
                    method: :delete, data: { confirm: "Are you sure?" } )%>
  	 <%= link_to("Edit Job", edit_job_path(@job), class: "btn btn-primary pull-right")%>
    <% end %>

  </div>
  <h2><%= @job.title %></h2>

  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Job Description</td>
        <td>Wage</td>
        <td>Contact</td>
      </tr>
    </thead>
    
          <td>#</td>
          <td><%= @job.description %></td>
          <td><%= @job.wage_lower_bound %> ~ <%= @job.wage_upper_bound %></td>
          <td><%= @job.contact %></td>
        </tr>
    
  </table>

</div>