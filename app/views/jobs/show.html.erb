
<h1><%= @job.title%></h1>
<p>
  <%=simple_format(@job.description)%>
</p>

<%= link_to("评论", new_job_resume_path(@job), class: "btn btn-default pull-right")%>
<% if current_user && current_user.is_shoucang_of?(@job) && current_user!=@job.user %>
<%= link_to("取消收藏", quit_job_path(@job),:method => :post, class: "btn btn-default pull-right")%>
<%end %>
<% if current_user && !current_user.is_shoucang_of?(@job) && current_user!=@job.user %>
<%= link_to("收藏", join_job_path(@job), :method => :post,class: "btn btn-default pull-right")%>
<%end %>
<% if current_user && current_user.following?(@job.user) && current_user!=@job.user %>
<%= link_to("取消关注", quguan_job_path(@job),:method => :post, class: "btn btn-default pull-right")%>
<%end %>
<% if current_user && !current_user.following?(@job.user) && current_user!=@job.user %>
<%= link_to("关注ta", guanzhu_job_path(@job), :method => :post,class: "btn btn-default pull-right")%>
<%end %>
<table class="table table-boldered">
  <thead>
      <tr>
          <td>评论</td>
          <td>发布时间</td>
      </tr>

  </thead>
  <tbody>
      <% @job.resumes.each do |job| %>
      <tr>
          <td>
              <%=simple_format(job.description)%>
          </td>

          <td>
              <%= job.created_at %>
          </td>
      </tr>
      <% end %>
  </tbody>
