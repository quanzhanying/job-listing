<div class="col-md-12">
  <div class="job">
    <%= link_to("Edit", edit_job_path(@job), class: "btn btn-primary pull-right")%>
    <%= link_to("Add a Resume", new_job_resume_path(@job), class: "btn btn-default pull-right")%>
  </div>
  <h2><%= @job.title %></h2>
  <p><%= @job.description %></p>

  <table class="table">
    <thead>
      <tr>
        <th> Title </th>
        <th> Applicant</th>
        <th> Uploaded_at</th>
        <th> Download Resume </th>
      </tr>
    </thead>
    <tbody>
      <% @resumes.each do |resume| %>
        <tr>
          <td><%= resume.content %></td>
          <td><%= resume.user.email %></td>
          <td><%= resume.created_at %></td>
          <td><%= link_to("Download Resume", resume.attachment_url) %></td>
          <td>
          <%= link_to('Edit', edit_job_resume_path(resume.job, resume), class: "btn btn-default btn-xs") %>
          <%= link_to("Delete", job_resume_path(resume.job, resume),class: "btn btn-default btn-xs",
                      method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
