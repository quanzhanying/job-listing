<div class="col-md-13">
  <table class="table table-bordered">
    <thead>
      <tr>
        <td class="bg-success">Title</td>
        <td class="bg-success">Description</td>
        <td class="bg-success">Wage Lower Bound</td>
        <td class="bg-success">Wage Upper Bound</td>
        <td class="bg-success">Created At</td>
        <td class="bg-success">Email</td>

      </tr>
    </thead>
    <tbody>
        <tr>
          <td><%= @job.title %></td>
          <td><%= @job.description %></td>
          <td><%= @job.wage_lower_bound %></td>
          <td><%= @job.wage_upper_bound %></td>
          <td><%= @job.created_at %> </td>
          <td><%= @job.contact_email %></td>
        </tr>
      </tbody>
    </table>

    <table class="table">
      <thead>
        <tr>
          <th>履历内容</th>
          <th>发表者</th>
          <th>发表时间</th>
        </tr>
      </thead>
      <tbody>
        <% @resumes.each do |resume| %>
        <tr>
          <td><%= resume.content %> </td>
          <td><%= resume.user.email %> </td>
          <td><%= resume.created_at %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="text-center">
    <%= link_to("提交履历", new_job_resume_path(@job), class: "btn btn-primary" , style: "font-size: 30px;") %>
  </div>
</div>
