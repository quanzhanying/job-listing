  <%=simple_format(@job.description)%>
</div>
<div class="text-center" >
  <%= link_to("评论", new_job_resume_path(@job), class: "btn btn-default ")%>
</div>
<hr>
<div class="">
  <% @job.resumes.scope.recent.each do |f| %>
    <div class="job-box">
      <%= f.description%></br>
      <span class="fa fa-clock-o" ><%= f.created_at.strftime("%Y/%m/%d/%H:%M	") %>From :<%= f.user.display_name%></span>
