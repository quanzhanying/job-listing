<div class='container col-sm-8 col-offset-2'>
<h1> 编辑职位信息 </h1>
<br />
<%= simple_form_for @job do |f| %>
<%= f.input :title %>
<%= f.input :description %>
<%= f.input :wage_upper_bound, :label => "薪资上限" %>
<%= f.input :wage_lower_bound, :label => "薪资下限" %>
<%= f.input :contact_email %>
<%= f.input :is_hidden %>

<%= f.submit "Submit" %>
<% end %>
</div>
