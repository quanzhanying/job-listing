<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= link_to image_tag("perjobs_mid.jpg", class: "img-rounded img-responsive img-center") %>
      <hr>
    </div>


    <div class="col-md-12">
      <h3>我发布的匠职
        <%= link_to("发布匠职", new_job_path, class: "btn btn-default pull-right") %>
      </h3>


      <!-- table -->

      <div class="table-responsive">
          <table class="table table-boldered table-striped">
              <thead>
                  <tr>
                      <td>匠职</td>
                      <td>工种</td>
                      <td>薪俸
                          <!-- <%= link_to jobs_path(:order => "by_lower_bound"), class: "btn btn-xs btn-default" do%>
                          上限<i class="fa fa-caret-up"></i><% end %>
                          <%= link_to jobs_path(:order => "by_upper_bound"), class: "btn btn-xs btn-default" do%>
                          下限<i class="fa fa-caret-down"></i><% end %> -->
                      </td>
                      <td>公司</td>
                      <td>城市</td>
                      <td>创建时间
                          <!-- <%= link_to jobs_path, class: "btn btn-xs btn-default" do%>
                          <i class="fa fa-caret-down"></i><% end %> -->
                      </td>
                      <td>竞征人数</td>
                      <!-- <td>收藏</td> -->
                      <td>操作</td>
                      <td>状态</td>
                  </tr>
              </thead>
              <tbody>
                  <% @jobs.each do |job| %>
                  <tr>
                      <td><%= link_to(job.title, job_path(job)) %></td>
                      <td><%= job.category %></td>
                      <td>
                          <span class="badge badge-info">
                              <span class="fa fa-rmb"></span><%= job.wage_lower_bound%>
                              -
                              <%= job.wage_upper_bound%>
                          </span>
                      </td>
                      <td><%= job.company %></td>
                      <td><%= job.city %></td>
                      <td><%= job.created_at.to_date %></td>
                      <td><%= link_to(job.resumes.count, admin_job_resumes_path(job)) %></td>
                      <!-- <td>
                          <% if current_user && current_user.is_member_of?(job) %>
                          <i class="fa fa-bookmark"></i>
                      <% else %>
                          <i class="fa fa-bookmark-o"></i>
                          <% end %>
                      </td> -->
                      <td>
                        <%= link_to("编辑", edit_job_path(job), class: "btn btn-xs btn-success") %>
                        <%= link_to("删除", job_path(job), class: "btn btn-xs btn-success", method: :delete, date:{ confirm: "你确定删除吗？"}) %>
                      </td>
                      <td>
                        <% if job.is_hidden? %>
                          <p>审核中</p>
                        <% else %>
                          <p>已发布</p>
                        <% end %>
                      </td>
                  </tr>
                  <% end %>
              </tbody>
          </table>
      </div>
    </div>
  </div>
</div>
