<div class="background" id="image">
    <br />
    <h2 class="text-center login-title">注册帐号</h2>
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="deviseposition">
                <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= f.error_notification %>
                    <div class="form-signin">
                        <%= f.input :email, label: '邮箱地址',required: true, autofocus: true %>
                        <%= f.input :password,label: '密码', required: true, hint: ("最少#{@minimum_password_length}位字符" if @minimum_password_length) %>
                        <%= f.input :password_confirmation,label: '确认密码', required: true %>
                    </div>
                    <%#= f.button :submit, "注册" %>
                    <div class="text-center form-signin ">
                        <button class="btn btn-danger text-center" type="submit">注册</button>
                        <%#= f.button :submit, "Log in" %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
    <div class="text-center new-account">
        <%= render "devise/shared/links" %>
    </div>
</div>
