body {
    padding-top: 50px; /* Required padding for .navbar-fixed-top. Remove if using .navbar-static-top. Change if height of navigation changes. */
}

/* Header Image Background - Change the URL below to your image path (example: ../images/background.jpg) */

.business-header {
    height: 600px;
    background: url('<%= asset_path("banner.jpg") %>') center center no-repeat scroll;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    background-size: cover;
    -o-background-size: cover;
}

/* Customize the text color and shadow color and to optimize text legibility. */

.tagline {
    text-align: center;
    margin-top: 230px;
    font-size: 5.5em;
    text-shadow: 0 0 5px #666;
    color: #fff;
}

.tagp {
    text-align: center;
    font-size: 2em;
    letter-spacing: 0.1em;
    text-shadow: 0 0 5px #666;
    color: #fff;
}

.img-center {
    margin: 0 auto;
}

footer {
    margin: 50px 0;
}

.login_bg{
  height: 750px;
  background: url('<%= asset_path("login_bg.jpg") %>') center center no-repeat scroll;
}

.login_inter{
  background-color: #fff;
  padding: 18px;
  border-radius: 5px;
}

.show_bg{
  height: 250px;
  background: url('<%= asset_path("show_bg.jpg") %>') center center no-repeat scroll;
}

.show_title{
  text-align:left;
  padding: 130px 0;
  font-size: 5em;
  text-shadow: 0 0 5px #000;
}

.show_title h1{
  font-size: 0.6em;
  color: #fff;
}

.resume_bg{
  height: 250px;
  background: url('<%= asset_path("resume_bg.jpg") %>') center center no-repeat scroll;
}

.present_resume{
  margin: 3em;
  font-size: 1em;
}
